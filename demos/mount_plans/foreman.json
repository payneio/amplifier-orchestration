{
  "session": {
    "orchestrator": {
      "module": "loop-streaming",
      "source": "local",
      "config": {}
    },
    "context": {
      "module": "context-persistent",
      "source": "local",
      "config": {}
    }
  },
  "providers": [
    {
      "module": "provider-anthropic",
      "source": "local",
      "config": {
        "default_model": "claude-opus-4-5",
        "debug": true,
        "raw_debug": true
      }
    }
  ],
  "tools": [
    {
      "module": "tool-issue",
      "source": "local",
      "config": {
        "data_dir": ".demo-workspace/.amplifier/issues",
        "auto_create_dir": true,
        "actor": "foreman"
      }
    }
  ],
  "hooks": [
    {
      "module": "hooks-logging",
      "source": "local",
      "config": {
        "auto_discover": true
      }
    }
  ]
